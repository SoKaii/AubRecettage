<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.RecapActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        style="@style/title"
        android:text="Récapitulatif"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="3dp"
        android:background="@color/black">
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="CI2A - Projet : "
        android:textColor="@color/orange"/>
    <EditText
        android:id="@+id/nCI2A"
        style="@style/edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:focusedByDefault="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Date de recette Initiale : "
        android:textColor="@color/orange"
        android:layout_marginStart="5dp"/>

    <Button
        android:id="@+id/dateRecetteI"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="appuyer pour choisir une date"
        android:background="@color/white"
        android:layout_marginTop="3dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Date de recette définitive : "
        android:textColor="@color/orange"/>

    <Button
        android:id="@+id/dateRecetteD"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="appuyer pour choisir une date"
        android:background="@color/white"
        android:layout_marginTop="3dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@android:color/darker_gray"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Type de recette : "
        android:textColor="@color/orange"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/recette_totale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="00dp"
            android:buttonTint="@color/black"
            android:text="TOTALE"
            android:textColor="@color/orange" />

        <RadioButton
            android:id="@+id/recette_partielle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:buttonTint="@color/black"
            android:text="PARTIELLE"
            android:textColor="@color/orange" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Réfèrent Orange : "
        android:textColor="@color/orange" />

    <EditText
        android:id="@+id/refORange"
        style="@style/edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="Validation Orange : "
        android:textColor="@color/orange" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/valid_orange_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="00dp"
            android:buttonTint="@color/black"
            android:text="OUI"
            android:textColor="@color/orange" />

        <RadioButton
            android:id="@+id/valid_orange_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:buttonTint="@color/black"
            android:text="NON"
            android:textColor="@color/orange" />
    </RadioGroup>


    <Button
        android:id="@+id/SavePDF"
        android:layout_width="match_parent"
        style="@style/button"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="50dp"
        android:text="Exporter"/>


</LinearLayout>