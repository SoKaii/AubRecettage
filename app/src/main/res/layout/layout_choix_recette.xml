<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoixRecetteActivity"
    android:background="@color/Black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titreChoixRecette"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choix du type de recette"
        android:gravity="center"
        android:textColor="@color/Orange"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">


        <Button
            android:id="@+id/buttonCableSimple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Câblage simple"
            android:textColor="@color/Orange"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/buttonCableComplexe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Orange"
            android:layout_marginLeft="10dp"
            android:text="Câblage complexe" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buttonRackage"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="80dp"
            android:textColor="@color/Orange"
            android:text="Rackage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonCableSimple" />

        <Button
            android:id="@+id/buttonJ4"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="80dp"
            android:textColor="@color/Orange"
            android:text="J4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonCableComplexe" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button26e"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="80dp"
            android:text="26E"
            android:textColor="@color/Orange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonRackage" />

        <Button
            android:id="@+id/buttonIncident"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="80dp"
            android:text="Incident"
            android:textColor="@color/Orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonJ4" />

    </LinearLayout>

</LinearLayout>

